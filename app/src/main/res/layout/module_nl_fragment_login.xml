<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#041341"
        android:id="@+id/module_nl_title_ly"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:src="@drawable/module_nl_logo"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_marginStart="9dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/cbb_sp_16"
                android:textColor="@color/white"
                android:text="城际直通车-司机端"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="9sp"
                android:textColor="@color/white"
                android:layout_marginTop="2dp"
                android:text="Intercity Passenger Train-Driver End"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/module_nl_title_num_tx"
                android:textSize="9sp"
                android:textColor="@color/white"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_below="@+id/module_nl_title_ly"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginEnd="30dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="number"
                    android:id="@+id/module_nl_phone_et"
                    android:layout_gravity="center_vertical"
                    android:lines="1"
                    android:singleLine="true"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:maxLength="18"
                    android:textSize="@dimen/cbb_sp_20"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:inputType="textPassword"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="34dp"
                    android:background="@color/linePrimary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginEnd="30dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <EditText
                    android:gravity="center"
                    android:id="@+id/module_nl_ps_et"
                    android:lines="1"
                    android:singleLine="true"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:textStyle="bold"
                    android:maxLength="18"
                    android:inputType="textPassword"
                    android:textSize="@dimen/cbb_sp_18"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="34dp"
                    android:background="@color/linePrimary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/module_nl_login"
        android:background="#041341"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="登录"
            android:textSize="@dimen/cbb_sp_20"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>